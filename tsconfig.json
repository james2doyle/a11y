{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "Functions/*": ["functions/*"],
      "Stores/*": ["stores/*"],
      "Components/*": ["components/*"]
    }
  },
  "exclude": [
    "dist",
    ".next"
  ],
  "compileOnSave": false
}
